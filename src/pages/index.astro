---
import Layout from "../layouts/Layout.astro";
import ListSection from "../components/ListSection.astro";
import ReactIcon from "../components/icons/ReactIcon.astro";
import WorkIcon from "../components/icons/WorkIcon.astro";
import AngularIcon from "../components/icons/AngularIcon.astro";
import VueIcon from "../components/icons/VueIcon.astro";

const websitesList = [
  {
    name: "Indeed - Remote - Mexico - Date",
    url: "https://mx.indeed.com/jobs?q=&l=Remote+-+Mexico&sort=date",
    icon: WorkIcon,
  },
  {
    url: "https://mx.indeed.com/jobs?q=react&l=Remote%20-%20Mexico&sort=date",
    name: "Indeed - Remote - Mexico - Date",
    icon: ReactIcon,
  },
  {
    url: "https://mx.indeed.com/jobs?q=angular&l=Remote%20-%20Mexico&sort=date",
    name: "Indeed - Remote - Mexico - Date",
    icon: AngularIcon,
  },
  {
    url: "https://mx.indeed.com/jobs?q=vue&l=Remote%20-%20Mexico&sort=date",
    name: "Indeed - Remote - Mexico - Date",
    icon: VueIcon,
  },
  {
    url: "https://mx.computrabajo.com/trabajo-de-react-en-remoto?by=publicationtime",
    name: "Computrabajo - Remote - Mexico - Date",
    icon: ReactIcon,
  },
  {
    url: "https://mx.computrabajo.com/trabajo-de-angular-en-remoto?by=publicationtime",
    name: "Computrabajo - Remote - Mexico - Date",
    icon: AngularIcon,
  },
  {
    url: "https://mx.computrabajo.com/trabajo-de-vue-en-remoto?by=publicationtime",
    name: "Computrabajo - Remote - Mexico - Date",
    icon: VueIcon,
  },
];
---

<Layout title="JobHope - La lista que te da esperanza en tu busqueda">
  <ul>
    {
      websitesList.map(({ url, name, icon }) => (
        <ListSection url={url} name={name} icon={icon} />
      ))
    }
  </ul>
</Layout>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
